@model StaffManagement.Models.Evaluation
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Evaluation</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="EmployeeId"></label>
        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Employees">
            <option value="">-- Select an employee --</option>
        </select>
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EvaluationDate"></label>
        <input asp-for="EvaluationDate" class="form-control" type="date" />
        <span asp-validation-for="EvaluationDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Score"></label>
        <input asp-for="Score" class="form-control" type="number" min="1" max="10" />
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comments"></label>
        <textarea asp-for="Comments" class="form-control"></textarea>
        <span asp-validation-for="Comments" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>