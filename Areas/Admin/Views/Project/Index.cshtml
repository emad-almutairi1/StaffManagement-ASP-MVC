@model IEnumerable<StaffManagement.Models.Project>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Projects</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Project</a>
</p>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.Id</td>
                    <td>@project.Name</td>
                    <td>@project.Description</td>
                    <td>@project.StartDate.ToShortDateString()</td>
                    <td>@project.EndDate?.ToShortDateString() ?? "N/A"</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-action="Delete" asp-route-id="@project.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this project?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No projects found. Click "Create New Project" to add one.
    </div>
}
