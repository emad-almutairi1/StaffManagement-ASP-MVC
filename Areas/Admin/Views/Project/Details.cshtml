@model StaffManagement.Models.Project
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Project Details</h2>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate?.ToShortDateString() ?? "N/A"</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Attachment</dt>
        <dd class="col-sm-10">
            @if (Model.AttachmentData != null)
            {
                if (Model.AttachmentType.StartsWith("image"))
                {
                    <img src="data:@Model.AttachmentType;base64,@Convert.ToBase64String(Model.AttachmentData)"
                         style="max-width:120px;border-radius:4px;" />
                }
                else
                {
                    <a href="@Url.Action("PreviewAttachment", "Project", new { id = Model.Id })"
                       target="_blank" class="btn btn-sm btn-info">
                        <i class="fa fa-eye"></i> Preview
                    </a>
                }
            }
            else
            {
                <span class="text-muted">No file</span>
            }
        </dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>